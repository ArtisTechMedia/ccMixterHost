#!/bin/bash
php -f cc-mixter-batch.php $1 $2
cd $HOME
sh ccmixter-0$1-package.sh
sh ccmixter-0$1-zip
mv ./injest/0$1/*.zip /var/www/ccmixter/injest
mv ./injest/0$1/*.csv /var/www/ccmixter/injest
sh ccmixter-0$1-clean.sh
echo -----------------------
echo Posted ZIP and CSV for Batch $1 
echo .
echo http://ccmixter.org/injest/ccmixter-0$1.csv
for f in /var/www/ccmixter/injest/ccmixter-0$1.zip
do
  echo "http://ccmixter.org/injest/$(basename $f)"
done
